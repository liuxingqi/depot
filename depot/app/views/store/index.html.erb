
 <div id='searchbox'>
   <%= form_tag(store_url, :method => "get") do %>
      <%= text_field_tag :search, params[:search], :id => 'search', :placeholder => 'Enter search term...'%>
      <%= submit_tag "Search", :name => nil, :id => 'submit'%>
   <% end %>
 </div>


<% if notice %>
<p id="notice" ><%= notice %></p>
<% end %>

<h1>Your Pragmatic Catalog</h1>

<%= 'visit times:' %>
<%= @counter %>

<% @stores.each do |product| %>
<div class="entry" >
<%= link_to image_tag(product.image_url), product%>
<%= product.title %>
<div class="price_line" >
<span class="price" ><%= number_to_currency(product.price) %></span>
<%= button_to 'Add to Cart', line_items_path(:product_id => product), 
    :remote => true %>
</div>

</div>
<% end %>

<p><%= will_paginate @stores %></p>l
